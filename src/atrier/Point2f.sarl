
import static extension java.lang.Math.*
/** 
 * @author matthieu
 * 
 */
class Point2f {
	
	var x : int
	var y : int

	def straightdistance(p1 : Point2f) : float {
		var dx = this.x - p1.x
		var dy = this.y - p1.y
		return sqrt(dx * dx + dy * dy) as float
	}

	def distance(p1 : Point2f) : float {
		(this.x - p1.x).abs + (this.y - p1.y).abs
	}
	
}
